@model QuanLiPhongTro.Models.SuDungDichVu

@{
    ViewData["Title"] = "Xóa thông tin sử dụng dịch vụ";
}

<h1>Xóa thông tin sử dụng dịch vụ</h1>

<h3>Bạn có chắc chắn muốn xóa thông tin này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phong.TenPhong)
        </dd>
        <dt class="col-sm-2">
            Dịch vụ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DichVu.TenDichVu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThangNam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ThangNam)
        </dd>
        <dt class="col-sm-2">
            Chỉ số cũ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChiSoCu)
        </dd>
        <dt class="col-sm-2">
            Chỉ số mới
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChiSoMoi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>
