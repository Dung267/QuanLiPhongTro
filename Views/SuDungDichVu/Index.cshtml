@model IEnumerable<QuanLiPhongTro.Models.SuDungDichVu>

@{
    ViewData["Title"] = "Danh Sách Phòng Sử Dụng Dịch Vụ";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Phòng</th>
            <th>Dịch Vụ</th>
            <th>Chỉ Số Cũ</th>
            <th>Chỉ Số Mới</th>
            <th>Tháng/Năm</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Phong.TenPhong</td>
                <td>@item.DichVu.TenDichVu</td>
                <td>@item.ChiSoCu</td>
                <td>@item.ChiSoMoi</td>
                <td>@item.ThangNam.ToString("MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary">Cập Nhật</a>
                </td>
            </tr>
        }
    </tbody>
</table>
