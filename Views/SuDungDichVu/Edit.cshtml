@model QuanLiPhongTro.Models.SuDungDichVu

@{
    ViewData["Title"] = "Cập nhật sử dụng dịch vụ";
    var tenDichVu = ViewBag.TenDichVu as string ?? "";
    bool laDichVuCanChiSo = tenDichVu.Contains("điện", StringComparison.OrdinalIgnoreCase) || tenDichVu.Contains("nước", StringComparison.OrdinalIgnoreCase);
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="PhongId" class="control-label"></label>
        <select asp-for="PhongId" class="form-control" asp-items="ViewBag.PhongId" disabled></select>
        <input type="hidden" asp-for="PhongId" />
    </div>

    <div class="form-group">
        <label asp-for="DichVuId" class="control-label"></label>
        <select asp-for="DichVuId" class="form-control" asp-items="ViewBag.DichVuId" disabled></select>
        <input type="hidden" asp-for="DichVuId" />
    </div>

    <div class="form-group">
        <label asp-for="ThangNam" class="control-label"></label>
        <input asp-for="ThangNam" class="form-control" type="month" />
        <span asp-validation-for="ThangNam" class="text-danger"></span>
    </div>

    @if (laDichVuCanChiSo)
    {
        <div class="form-group">
            <label asp-for="ChiSoCu" class="control-label"></label>
            <input asp-for="ChiSoCu" class="form-control" readonly />
            <span asp-validation-for="ChiSoCu" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ChiSoMoi" class="control-label"></label>
            <input asp-for="ChiSoMoi" class="form-control" />
            <span asp-validation-for="ChiSoMoi" class="text-danger"></span>
        </div>
    }
    else
    {
        <div class="form-group">
            <label>Dịch vụ này không yêu cầu nhập chỉ số.</label>
        </div>
    }

    <div class="form-group mt-3">
        <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
