@model QuanLiPhongTro.Models.ThanhToan
@{
    ViewData["Title"] = "Tạo hóa đơn thanh toán";
}

<h2>Tạo hóa đơn thanh toán</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Chọn hợp đồng</label>
        <select asp-for="HopDongId" class="form-select" asp-items="ViewBag.HopDongs">
            <option value="">-- Chọn hợp đồng --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="TongTien" class="form-label"></label>
        <input asp-for="TongTien" class="form-control" />
        <span asp-validation-for="TongTien" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NgayThanhToan" class="form-label"></label>
        <input asp-for="NgayThanhToan" class="form-control" type="date" />
        <span asp-validation-for="NgayThanhToan" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Tạo</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}