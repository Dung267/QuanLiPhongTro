@model QuanLiPhongTro.Models.ThanhToan
@{
    ViewData["Title"] = "Chi tiết thanh toán";
}

<h2>Chi tiết thanh toán</h2>

<div>
    <h4>Phòng: @Model.HopDong.Phong.TenPhong</h4>
    <p>Tháng/Năm: @Model.ThangNam.ToString("MM/yyyy")</p>
    <p>Tổng tiền: @Model.TongTien.ToString("N0") VND</p>
    <p>Trạng thái: @Model.trangThaiThanhToan</p>
    <p>Ngày thanh toán: @Model.NgayThanhToan.ToString("dd/MM/yyyy")</p>
</div>

<h5>Chi tiết các khoản thanh toán:</h5>
<table class="table">
    <thead>
        <tr>
            <th>Loại</th>
            <th>Mô tả</th>
            <th>Số tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ct in Model.ChiTietThanhToans)
        {
            <tr>
                <td>@ct.Loai</td>
                <td>@ct.MoTa</td>
                <td>@ct.SoTien.ToString("N0") VND</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
