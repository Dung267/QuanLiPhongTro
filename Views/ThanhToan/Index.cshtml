@model IEnumerable<QuanLiPhongTro.Models.ThanhToan>
@{
    ViewData["Title"] = "Lịch sử thanh toán";
}

<h2>Lịch sử thanh toán</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Phòng</th>
            <th>Tháng/Năm</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Ngày thanh toán</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HopDong.Phong.TenPhong</td>
                <td>@item.ThangNam.ToString("MM/yyyy")</td>
                <td>@item.TongTien.ToString("N0") VND</td>
                <td>@item.trangThaiThanhToan</td>
                <td>@item.NgayThanhToan.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                    @if (item.trangThaiThanhToan == TrangThaiThanhToan.ChuaThanhToan)
                    {
                        <form asp-action="ThanhToan" method="post" asp-route-id="@item.Id" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success">Thanh toán</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
