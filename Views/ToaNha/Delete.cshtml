@model QuanLiPhongTro.Models.ToaNha
@{
    ViewData["Title"] = "Xóa Tòa Nhà";
}
<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc muốn xóa tòa nhà này?</h4>

<div class="mb-3">
    <strong>Mã:</strong> @Model.Id<br />
    <strong>Tên:</strong> @Model.TenToa
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
