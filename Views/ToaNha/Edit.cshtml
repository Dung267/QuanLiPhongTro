@model QuanLiPhongTro.Models.ToaNha
@{
    ViewData["Title"] = "Chỉnh sửa Tòa Nhà";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Id" class="form-label">Mã Tòa Nhà</label>
        <input asp-for="Id" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="TenToa" class="form-label">Tên Tòa Nhà</label>
        <input asp-for="TenToa" class="form-control" />
        <span asp-validation-for="TenToa" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
