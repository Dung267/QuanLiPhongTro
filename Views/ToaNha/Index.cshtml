@model IEnumerable<QuanLiPhongTro.Models.ToaNha>

<h2>Danh sách Tòa Nhà</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm Tòa Nhà</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên Tòa Nhà</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenToa</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
