@model QuanLiPhongTro.Models.DichVu
@{
    ViewData["Title"] = "Sửa thông tin dịch vụ";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-edit me-2"></i>@ViewData["Title"]
            </h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="TenDichVu" class="form-label fw-bold">Tên dịch vụ</label>
                            <input asp-for="TenDichVu" class="form-control" placeholder="Nhập tên dịch vụ" />
                            <span asp-validation-for="TenDichVu" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DonGia" class="form-label fw-bold">Đơn giá (VND)</label>
                            <div class="input-group">
                                <input asp-for="DonGia" id="DonGiaInput" class="form-control text-end"
                                       placeholder="VD: 100,000" data-type="currency" />
                                <span class="input-group-text bg-white">đ</span>
                            </div>
                            <span asp-validation-for="DonGia" class="text-danger small"></span>
                            <div class="form-text">Nhập số tiền không dấu phân cách</div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-save me-1"></i> Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Định dạng tiền tệ khi tải trang
        $(document).ready(function () {
            formatCurrencyOnLoad();

            // Định dạng khi rời khỏi trường nhập
            $('#DonGiaInput').on('blur', function () {
                formatCurrencyInput(this);
            });

            // Xóa định dạng khi focus vào
            $('#DonGiaInput').on('focus', function () {
                unformatCurrencyInput(this);
            });

            // Đảm bảo gửi giá trị số khi submit
            $('form').submit(function () {
                const input = document.getElementById('DonGiaInput');
                input.value = input.value.replace(/[^\d]/g, '');
            });
        });

        function formatCurrencyOnLoad() {
            const input = document.getElementById('DonGiaInput');
            if (input && input.value) {
                input.value = parseInt(input.value).toLocaleString('vi-VN');
            }
        }

        function formatCurrencyInput(inputElement) {
            let value = inputElement.value.replace(/[^\d]/g, '');
            if (value) {
                inputElement.value = parseInt(value).toLocaleString('vi-VN');
            }
        }

        function unformatCurrencyInput(inputElement) {
            inputElement.value = inputElement.value.replace(/[^\d]/g, '');
        }
    </script>

    <style>
        .input-group-text {
            min-width: 40px;
            justify-content: center;
        }

        .form-control.text-end {
            text-align: right;
        }
    </style>
}