@model QuanLiPhongTro.Models.HopDongViewModel

@{
    ViewData["Title"] = "Sửa hợp đồng";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Sua">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserId" class="control-label">Người thuê</label>
                    <select asp-for="UserId" asp-items="Model.DanhSachNguoiThue" class="form-control">
                        <option value="">-- Chọn người thuê --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhongId" class="control-label">Phòng</label>
                    <select asp-for="PhongId" asp-items="Model.DanhSachPhong" class="form-control">
                        <option value="">-- Chọn phòng --</option>
                    </select>
                    <span asp-validation-for="PhongId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NgayBatDau" class="control-label">Ngày bắt đầu</label>
                            <input asp-for="NgayBatDau" type="date" class="form-control" />
                            <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Ngày kết thúc</label>
                            <input type="text" class="form-control"
                                   value="@Model.NgayBatDau.AddMonths(6).ToString("dd/MM/yyyy")" readonly />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="TienCoc" class="control-label">Tiền cọc</label>
                    <input asp-for="TienCoc" class="form-control" />
                    <span asp-validation-for="TienCoc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cập nhật
                    </button>
                    <a asp-action="DanhSach" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Tính tự động ngày kết thúc khi thay đổi ngày bắt đầu
            $('#NgayBatDau').change(function() {
                var startDate = new Date($(this).val());
                if (!isNaN(startDate.getTime())) {
                    var endDate = new Date(startDate);
                    endDate.setMonth(endDate.getMonth() + 6);
                    var formattedDate = endDate.toISOString().split('T')[0];
                    $(this).closest('.row').find('input[type="text"]').val(formatDate(endDate));
                }
            });

            function formatDate(date) {
                var day = date.getDate().toString().padStart(2, '0');
                var month = (date.getMonth() + 1).toString().padStart(2, '0');
                var year = date.getFullYear();
                return day + '/' + month + '/' + year;
            }
        });
    </script>
}