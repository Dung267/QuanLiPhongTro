@model IEnumerable<QuanLiPhongTro.Models.HopDong>
@using QuanLiPhongTro.Helpers
@{
    ViewData["Title"] = "Danh sách hợp đồng";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="text-right mb-3">
        <a asp-action="Them" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm hợp đồng
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>STT</th>
                    <th>Người thuê</th>
                    <th>Phòng</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Tiền cọc</th>
                    <th>Trạng thái thanh toán</th>
                    <th>Trạng thái trả phòng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.User.UserName</td>
                        <td>@item.Phong.TenPhong</td>
                        <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                        <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                        <td>@item.TienCoc.ToString("N0") đ</td>
                        <td>
                            @if (item.HoaDons != null && item.HoaDons.Any())
                            {
                                var thanhToan = item.HoaDons.FirstOrDefault()?.ThanhToan;
                                if (thanhToan != null)
                                {
                                    <span class="badge badge-@(thanhToan.trangThaiThanhToan == TrangThaiThanhToan.DaThanhToan ? "success" : thanhToan.trangThaiThanhToan == TrangThaiThanhToan.ChuaThanhToan ? "danger" : "warning")">
                                        @thanhToan.trangThaiThanhToan.GetDisplayName()
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Chưa có thanh toán</span>
                                }
                            }
                            else
                            {
                                <span class="badge badge-secondary">Chưa có thanh toán</span>
                            }
                        </td>
                        <td>
                            @if (!item.DaTra)
                            {
                                <span class="badge badge-success">Đang thuê</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Đã trả phòng</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Sua" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="Xoa" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Bạn có chắc chắn muốn xóa hợp đồng này?')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>