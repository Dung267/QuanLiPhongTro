@model IEnumerable<QuanLiPhongTro.Models.Phong>

<h2>Danh sách Phòng</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm Phòng</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên Phòng</th>
            <th>Số Người Tối Đa</th>
            <th>Giá Tiền</th>
            <th>Trạng Thái</th>
            <th>Toà Nhà</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.TenPhong</td>
                <td>@p.SoNguoiToiDa</td>
                <td>@String.Format("{0:#,##0} VND", p.GiaTien)</td>
                <td>@(p.DaChoThue ? "Đã cho thuê" : "Phòng trống")</td>
                <td>@p.ToaNha?.TenToa</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-primary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
