@model IEnumerable<QuanLiPhongTro.Models.Phong>
@{
    ViewData["Title"] = "Danh sách Phòng";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm Phòng</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã Phòng</th>
            <th>Tên Phòng</th>
            <th>Số Người Tối Đa</th>
            <th>Giá Tiền</th>
            <th>Trạng Thái</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TenPhong</td>
                <td>@item.SoNguoiToiDa</td>
                <td>@item.GiaTien</td>
                <td>@(item.DaChoThue ? "Đã Cho Thuê" : "Chưa Cho Thuê")</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
