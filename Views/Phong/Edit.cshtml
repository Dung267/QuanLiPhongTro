@model QuanLiPhongTro.Models.Phong
@{
    ViewData["Title"] = "Chỉnh sửa Phòng";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="mb-3">
        <label asp-for="Id" class="form-label">Mã Phòng</label>
        <input asp-for="Id" class="form-control" disabled /> <!-- ID không được chỉnh sửa -->
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TenPhong" class="form-label">Tên Phòng</label>
        <input asp-for="TenPhong" class="form-control" placeholder="Nhập tên phòng" />
        <span asp-validation-for="TenPhong" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SoNguoiToiDa" class="form-label">Số Người Tối Đa</label>
        <input asp-for="SoNguoiToiDa" class="form-control" placeholder="Nhập số người tối đa" />
        <span asp-validation-for="SoNguoiToiDa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GiaTien" class="form-label">Giá Tiền</label>
        <input asp-for="GiaTien" class="form-control" placeholder="Nhập giá tiền" />
        <span asp-validation-for="GiaTien" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ToaNhaId" class="form-label">Thuộc Tòa Nhà</label>
        <select asp-for="ToaNhaId" class="form-control" asp-items="ViewBag.ToaNhaList"></select>
        <span asp-validation-for="ToaNhaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DaChoThue" class="form-label">Đã Cho Thuê</label>
        <input asp-for="DaChoThue" class="form-check-input" />
        <span asp-validation-for="DaChoThue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
