@model QuanLiPhongTro.Models.Phong

<h2>Cập Nhật Phòng</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="TenPhong"></label>
        <input asp-for="TenPhong" class="form-control" />
        <span asp-validation-for="TenPhong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoNguoiToiDa"></label>
        <input asp-for="SoNguoiToiDa" class="form-control" />
        <span asp-validation-for="SoNguoiToiDa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiaTien"></label>
        <input asp-for="GiaTien" class="form-control" />
        <span asp-validation-for="GiaTien" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DaChoThue"></label>
        <input asp-for="DaChoThue" class="form-check-input" />
        <span asp-validation-for="DaChoThue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ToaNhaId">Thuộc Toà Nhà</label>
        <select asp-for="ToaNhaId" class="form-control" asp-items="ViewBag.ToaNhaList"></select>
        <span asp-validation-for="ToaNhaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
